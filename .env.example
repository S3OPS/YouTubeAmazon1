# YouTube Amazon Affiliate Automation System
# Copy this file to .env and fill in your credentials

# ===========================================
# YouTube API Configuration
# ===========================================
# Get credentials from: https://console.cloud.google.com/
# 1. Create a project in Google Cloud Console
# 2. Enable YouTube Data API v3
# 3. Create OAuth 2.0 credentials

YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here
YOUTUBE_REDIRECT_URI=http://localhost:3000/oauth2callback
YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token_here

# ===========================================
# Amazon Affiliate Configuration
# ===========================================
# Get your affiliate tag from: https://affiliate-program.amazon.com/
# Sign up for Amazon Associates program

AMAZON_AFFILIATE_TAG=your_affiliate_tag_here
AMAZON_TRACKING_ID=your_tracking_id_here

# ===========================================
# Video Processing Configuration
# ===========================================
# Directory where AI-generated videos are stored
VIDEO_DIRECTORY=./videos

# Directory for processed video metadata
PROCESSED_VIDEO_DIRECTORY=./videos/processed

# ===========================================
# Video Generation Configuration
# ===========================================
# Temporary directory for video generation
TEMP_DIRECTORY=./temp

# Video resolution
VIDEO_WIDTH=1920
VIDEO_HEIGHT=1080

# Video frame rate
VIDEO_FPS=30

# Duration of each slide in seconds
SLIDE_DURATION=3

# ===========================================
# Automation Configuration
# ===========================================
# Enable automatic uploading (true|false)
AUTO_UPLOAD=false

# Upload schedule (cron format)
# Default: 0 10 * * * (10 AM daily)
# Examples:
#   - 0 10 * * * : Daily at 10 AM
#   - 0 14 * * 1-5 : Weekdays at 2 PM
#   - 0 */6 * * * : Every 6 hours
UPLOAD_SCHEDULE=0 10 * * *

# Default privacy status for uploaded videos (public|unlisted|private)
DEFAULT_PRIVACY_STATUS=public

# ===========================================
# Server Configuration
# ===========================================
PORT=3000
NODE_ENV=development

# Security Configuration (Production)
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

